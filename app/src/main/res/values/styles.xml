<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationTheme" parent="AppTheme">
        <item name="itemIconTint">@android:color/white</item>
        <item name="itemTextColor">@android:color/white</item>
        <item name="android:background">#00ffffff</item>
    </style>

    <style name="TitleTheme">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">30dp</item>
        <item name="android:fontFamily">@font/proxima_nova_black_res</item>
    </style>

    <style name="input_text">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:backgroundTint">@color/colorBeigeTransparent</item>
        <item name="android:textColorHint">@color/colorBeigeTransparent</item>
        <item name="android:textColor">@color/colorBeige</item>
    </style>

    <style name="theme_text_bold">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/colorBeige</item>
    </style>

    <style name="theme_text_bold_transparent">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/colorBeigeTransparent</item>
    </style>

    <style name="merchant_textinput_layout">
        <item name="android:textColor">@color/colorBeige</item>
        <item name="android:textColorHint">@color/colorBeigeTransparent</item>
        <item name="android:backgroundTint">@color/colorBeigeTransparent</item>
        <item name="android:background">@color/colorBeigeTransparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
    </style>

    <style name="merchant_textinput_layout_city">
        <item name="android:textColor">@color/colorBeige</item>
        <item name="android:textColorHint">@color/colorBeigeTransparent</item>
        <item name="android:backgroundTint">@color/colorBeigeTransparent</item>
        <item name="android:background">@color/colorBeigeTransparent</item>
        <item name="android:layout_height">65dp</item>
    </style>

    <style name="merchant_textinput_layout_editText">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:textColor">@color/colorBeige</item>
        <item name="android:textColorHint">@color/colorBeige</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>


    <style name="report_text">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="report_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/light_blue_rounded</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>