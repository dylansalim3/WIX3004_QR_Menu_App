<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationTheme" parent="AppTheme">
        <item name="itemIconTint">@android:color/white</item>
        <item name="itemTextColor">@android:color/white</item>
        <item name="android:background">#00ffffff</item>
    </style>

    <style name="TitleTheme">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/proxima_nova_black_res</item>
    </style>

    <style name="input_text">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:backgroundTint">@color/colorBeigeTransparent</item>
        <item name="android:textColorHint">@color/colorBeigeTransparent</item>
        <item name="android:textColor">@color/colorBeige</item>
    </style>

    <style name="theme_text_bold">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/colorBeige</item>
    </style>

    <style name="theme_text_bold_transparent">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/colorBeigeTransparent</item>
    </style>

    <style name="merchant_textinput_layout">
        <item name="android:textColor">@color/colorBeige</item>
        <item name="android:textColorHint">@color/colorBeigeTransparent</item>
        <item name="android:backgroundTint">@color/colorBeigeTransparent</item>
        <item name="android:background">@color/colorBeigeTransparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
    </style>

    <style name="merchant_textinput_layout_city">
        <item name="android:textColor">@color/colorBeige</item>
        <item name="android:textColorHint">@color/colorBeigeTransparent</item>
        <item name="android:backgroundTint">@color/colorBeigeTransparent</item>
        <item name="android:background">@color/colorBeigeTransparent</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">65dp</item>
    </style>

    <style name="merchant_textinput_layout_editText">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:textColor">@color/colorBeige</item>
        <item name="android:textColorHint">@color/colorBeige</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>


    <style name="ListItemTitleTheme">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/proxima_nova_black</item>
    </style>

    <style name="ListItemDescTheme">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/proxima_nova_black</item>
    </style>

    <style name="ListItemSubtitleTheme">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/proxima_nova_black</item>
    </style>

    <style name="Switch">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="profile_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="profile_top_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">240dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">30dp</item>
    </style>

    <style name="profile_back_btn">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="profile_image">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">140dp</item>
    </style>

    <style name="profile_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:background">@drawable/dark_grey_rounded</item>
        <item name="android:elevation">30dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBeige</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="profile_input">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dark_grey_rounded</item>
        <item name="android:elevation">30dp</item>
        <item name="android:textColor">@color/colorBeige</item>
        <item name="android:textColorHint">@color/colorLighterGray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="profile_text">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/colorBeige</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="profile_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingBottom">40dp</item>
    </style>

    <style name="account_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <style name="account_top_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">40dp</item>
    </style>

    <style name="account_title">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBeige</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="account_small_logo">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/oval_layer</item>
    </style>

    <style name="account_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:background">@drawable/dark_grey_rounded</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="account_button_text">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBeige</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="account_button_img">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="notification_item_title">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBeige</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="notification_item_body">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBeige</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="onboarding_button">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorBeige</item>
    </style>

    <style name="onboarding_Nextbutton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorBeige</item>
    </style>

    <style name="onboarding_text_content">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBeige</item>
        <item name="android:fontFamily">@font/proxima_nova_black</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="qr_scan_closebutton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBeige</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    <style name="qr_scan_cardView">

    </style>

    <style name="qr_scan_cardView_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorBeige</item>
        <item name="android:fontFamily">@font/proxima_nova_extrabold_res</item>
    </style>

    <style name="qr_scan_button">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/colorBeige</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>