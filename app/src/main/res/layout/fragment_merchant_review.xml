<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.merchant_info.review.MerchantReviewFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_merchant_review"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_merchant_review_empty_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/colorBeige"
        android:text="@string/no_item_merchant"
        android:visibility="gone"
        style="@style/ListItemTitleTheme"/>
</FrameLayout>