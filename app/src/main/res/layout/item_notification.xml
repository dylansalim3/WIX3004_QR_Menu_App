<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="25dp"
    android:background="@drawable/dark_grey_rounded"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/notification_item_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/notification_item_title"
            style="@style/notification_item_title" />

        <TextView
            android:id="@+id/notification_item_body"
            style="@style/notification_item_body" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/notification_item_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        style="@style/account_button_img"
        android:src="@drawable/next_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>